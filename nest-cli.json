{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": 
     [{ "include": "**/*.css","watchAssets": true },
      { "include": "**/*.json","watchAssets": true },
      { "include": "**/*.txt","watchAssets": true },
      { "include": "**/*.png","watchAssets": true },
      { "include": "**/*.ico","watchAssets": true },
      { "include": "**/*.html","watchAssets": true},
      { "include": "**/*.LICENSE.txt","watchAssets": true},
      { "include": "**/*.js.map","watchAssets": true},
      { "include": "**/*.js","watchAssets": true},
      { "include": "**/*.css.map","watchAssets": true}]
  }
}
